<div class="authform">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f| %>
    <h3>Sign up</h3>
    <%= devise_error_messages! %>
    <div class="form-group">
      <div class="row">
      	<div class="small-4 columns">
          <%= f.label :avatar %>
        </div>
        <div class="small-8 columns">
          <%= f.file_field :avatar, :autofocus => true, class: 'form-control' %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
      	<div class="small-5 columns">
      	  <%= f.label t('label-forms.name') %>
      	</div>
      	<div class="small-7 columns">
      	  <%= f.text_field :name, class: "form-control", placeholder: t('label-forms.name').capitalize %>
      	</div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <div class="small-5 columns">
          <%= f.label :email %>
        </div>
        <div class="small-7 columns">
          <%= f.email_field :email, class: 'form-control', placeholder: :email.capitalize %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
      	<div class="small-5 columns">
      	  <%= f.label t('label-forms.account_number') %>
      	</div>
      	<div class="small-7 columns">
      	  <%= f.text_field :account_number, class: "form-control", value: "", placeholder: t('label-forms.account_number').to_s.split('_').map(&:titleize) %>
      	</div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
      	<div class="small-5 columns">
          <%= f.label :password %>
        </div>
        <div class="small-7 columns">
          <%= f.password_field :password, class: 'form-control', placeholder: :password.capitalize %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
      	<div class="small-5 columns">
          <%= f.label t('label-forms.password_confirmation') %>
        </div>
        <div class="small-7 columns">
          <%= f.password_field :password_confirmation, class: 'form-control', placeholder: t('label-forms.password_confirmation').to_s.split('_').map(&:titleize) %>
        </div>
      </div>
    </div>
     <%= f.submit t('lbl-boton.sign_in'), :class => 'button small right boton-radius-personalizado' %>
     <%= link_to t('lbl-boton.cancel'), :back, :class => 'button small right boton-radius-personalizado' %>
  <% end %>
</div>
