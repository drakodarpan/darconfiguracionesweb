<div class="authform">
  <h3><%= t('title-forms.edit') %> <%= current_user.name %></h3>
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :role => 'form'}) do |f| %>
    <%= devise_error_messages! %>
    <div class="form-group">
      <div class="row">
      	<div class="small-4 columns">
          <%= f.label :avatar %>
        </div>
        <div class="small-8 columns">
          <%= f.file_field :avatar, :autofocus => true, class: 'form-control' %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
      	<div class="small-5 columns">
      	  <%= f.label t('label-forms.name') %>
      	</div>
      	<div class="small-7 columns">
      	  <%= f.text_field :name, class: "form-control" %>
      	</div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
      	<div class="small-5 columns">
      	  <%= f.label t('label-forms.account_number') %>
      	</div>
      	<div class="small-7 columns">
      	  <%= f.text_field :account_number, class: 'form-control' %>
      	</div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
      	<div class="small-5 columns">
          <%= f.label :email %>
        </div>
        <div class="small-7 columns">
          <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div class="small-10 columns">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>
        </div>
      </div>
    </div>
    <fieldset>
      <p><%= t('pass-label.lblpasblank') %></p>
      <div class="form-group">
      	<div class="row">
      	  <div class="small-5 columns">
            <%= f.label :password %>
          </div>
          <div class="small-7 columns">
            <%= f.password_field :password, :autocomplete => 'off', class: 'form-control', placeholder: :password.capitalize %>
          </div>
        </div>
      </div>
      <div class="form-group">
      	<div class="row">
      	  <div class="small-5 columns">
            <%= f.label t('label-forms.password_confirmation') %>
          </div>
          <div class="small-7 columns">
            <%= f.password_field :password_confirmation, class: 'form-control', placeholder: t('label-forms.password_confirmation').to_s.split('_').map(&:titleize) %>
          </div>
        </div>
      </div>
    </fieldset>
    <fieldset>
      <p><%= t('pass-label.lblpasnow') %></p>
      <div class="form-group">
      	<div class="row">
      	  <div class="small-5 columns">
            <%= f.label t('label-forms.current_password') %>
          </div>
          <div class="small-7 columns">
            <%= f.password_field :current_password, class: 'form-control', placeholder: t('label-forms.current_password').to_s.split('_').map(&:titleize) %>
          </div>
        </div>
      </div>
    </fieldset>
      <%= f.submit t('lbl-boton.update'), :class => 'button small right boton-radius-personalizado' %>
      <%= link_to t('lbl-boton.back'), :back %>
  <% end %>
</div>
<div class="authform">
  <h3><%= t('label-forms.delete_account') %></h3>
  <p><%= t('label-forms.sad_message')%></p>
  <%= button_to ( t('lbl-boton.cancel') +" "+ t('label-forms.my_account') ), 
      registration_path(resource_name), 
      :data => { :confirm => "Are you sure?" }, 
      :method => :delete, 
      :class => 'button small right boton-radius-personalizado' %>
</div>
